<style type='text/css'>
  img.ui-datepicker-trigger{
    margin-left: 4px;
  }
  #search_not_paged {
    margin-top: 3px;
    margin-left: 6px;
  }
  .tiny {
    padding-bottom: 20px;
  }
  .not_paged {
    margin-top: 29px !important;
    width: 10px !important;
  }
  .not_paged_label {
    margin-top: 27px !important;
    margin-left: 1px;
  }
</style>

<script>
  $(document).ready(function() {
     defaultToggleLessMore();
  });
</script>

<div id="busqueda">
<% form_for @search do |f| %>
	<ul>
    <li>
      <%= f.label :client_name_like, t('activerecord.attributes.client.name') %>
      <%= f.text_field :client_name_like %>
    </li>
    <li>
      <%= f.label :ip_like, t('activerecord.attributes.contract.ip') %>
      <%= f.text_field :ip_like %>
    </li>
    <li>
      <%= f.label :plan_id_equals, t('activerecord.attributes.contract.plan') %>
      <%= f.collection_select :plan_id_equals, Plan.all, :id, :name, :include_blank => true %>
    </li>
    <li>
      <%= f.label :state_equals, t('activerecord.attributes.contract.state') %>
      <%= f.select :state_equals, Contract.aasm_states_for_select, :include_blank => true %>
    </li>
    <li>
      <%= check_box_tag 'search[not_paged]', nil, nil, { :class => "left not_paged" } %>
      <%= label_tag 'search[not_paged]', t('activerecord.attributes.search.not_paged'), :class => 'left not_paged_label' %>
    </li>
    <div style="clear: both">
      <li><a id="search_more" onclick="toggleLessMore()"><%= I18n.t('buttons.more') %></a><li>
      <li><a id="search_less" class="hidden" onclick="toggleLessMore()"><%= I18n.t('buttons.less') %></a><li>
    </div>

    <div id="search_advanced">
      <li>
        <label><%=t 'activerecord.attributes.contract.forwarded_ports' %></label>
      </li>
      <div style="clear: both"></div>
      <li>
        <%= f.label :forwarded_ports_provider_id_equals, t('activerecord.attributes.forwarded_port.provider') %>
        <%= f.collection_select :forwarded_ports_provider_id_equals, Provider.all, :id, :name, :include_blank => true %>
      </li>
      <li>
        <%= f.label :forwarded_ports_public_port_equals, t('activerecord.attributes.forwarded_port.public_port') %>
        <%= f.text_field :forwarded_ports_public_port_equals %>
      </li>
      <li>
        <%= f.label :forwarded_ports_private_port_equals, t('activerecord.attributes.forwarded_port.private_port') %>
        <%= f.text_field :forwarded_ports_private_port_equals %>
      </li>
      <div style="clear: both"></div>
      <li>
        <%= f.label :mac_address_like, t('activerecord.attributes.contract.mac_address') %>
        <%= f.text_field :mac_address_like %>
      </li>
      <li>
        <%= f.label :public_address_ip_like, t('activerecord.attributes.contract.public_address') %>
        <%= f.text_field :public_address_ip_like %>
      </li>
      <li>
        <%= f.label :proxy_arp_is, t('activerecord.attributes.contract.proxy_arp') %>
        <%= f.check_box :proxy_arp_is %>
      </li>
      <div style="clear: both"></div>
      <li>
        <%= f.label :detail_like, t('activerecord.attributes.contract.detail') %>
        <%= f.text_field :detail_like %>
      </li>
      <li>
        <%= f.label :cpe_like, t('activerecord.attributes.contract.cpe') %>
        <%= f.text_field :cpe_like %>
      </li>
      <li>
        <%= f.label :node_like, t('activerecord.attributes.contract.node') %>
        <%= f.text_field :node_like %>
      </li>
      <div style="clear: both"></div>
      <li>
        <%= f.label :client_external_client_number_like, t('activerecord.attributes.client.external_client_number') %>
        <%= f.text_field :client_external_client_number_like %>
      </li>
      <li>
        <%= f.label :client_national_identification_number_like, t('activerecord.attributes.client.national_identification_number') %>
        <%= f.text_field :client_national_identification_number_like %>
      </li>
      <li>
        <%= f.label :unique_provider_id_equals, t('activerecord.attributes.contract.unique_provider') %>
        <%= f.collection_select :unique_provider_id_equals, Provider.all, :id, :name, :include_blank => true %>
      </li>
      <div style="clear: both"></div>
      <li>
        <%= f.label :current_traffic_data_count_greater_than_or_equal_to, t('messages.traffic.data_count_greater_than_or_equal_to') %>
        <%= f.text_field :current_traffic_data_count_greater_than_or_equal_to, :placeholder => t('messages.traffic.placeholder_only_gb') %>
      </li>
      <li>
        <%= f.label :current_traffic_data_count_less_than_or_equal_to, t('messages.traffic.data_count_less_than_or_equal_to') %>
        <%= f.text_field :current_traffic_data_count_less_than_or_equal_to, :placeholder =>  t('messages.traffic.placeholder_only_gb') %>
      </li>

      <div style="clear: both"></div>
      <li>
	<%= f.radio_button :is_connected, "", { :class => "left not_paged" } %>
        <%= f.label :not_is_connected, t('messages.contract.connected_and_not_connected'), :class => 'left not_paged_label' %>
        <%= f.radio_button :is_connected, true, { :class => "left not_paged" } %>
        <%= f.label :not_is_connected, t('messages.contract.connected'), :class => 'left not_paged_label' %>
        <%= f.radio_button :is_connected, false, { :class => "left not_paged" } %>
        <%= f.label :not_is_connected, t('messages.contract.not_connected'), :class => 'left not_paged_label' %>
      </li>
      <%= render_search_extensions :form => f  %>
    </div>

    <div style="clear: both"></div>
    <li>
      <%= f.submit t('buttons.search') %>
      <%= f.submit t('buttons.reset'),{ :type => "button", :class => "reset"}%>
    </li>
  </ul>
<% end %>
</div>
